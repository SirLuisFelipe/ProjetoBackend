<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="1" author="luis_felipe">
        <createTable tableName="users">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="cpf" type="varchar(100)"/>
            <column name="name" type="varchar(100)"/>
            <column name="email" type="varchar(100)"/>
            <column name="encoded_password" type="varchar(100)"/>
            <column name="role" type="varchar(100)"/>
        </createTable>
        <createTable tableName="track">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)"/>
        </createTable>
        <createTable tableName="payment">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)"/>
        </createTable>
        <createTable tableName="scheduling">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints foreignKeyName="fk_users_scheduling"/>
            </column>
            <column name="track_id" type="bigint">
                <constraints foreignKeyName="fk_track_scheduling"/>
            </column>
            <column name="payment_id" type="bigint">
                <constraints foreignKeyName="fk_payment_scheduling"/>
            </column>
            <column name="scheduled_time_start" type="TIMESTAMP"/>
            <column name="scheduled_time_end" type="TIMESTAMP"/>
            <column name="payment_value" type="DOUBLE PRECISION"/>
        </createTable>
    </changeSet>

    <!-- Migration para remover as colunas antigas e adicionar as novas -->
    <changeSet id="2" author="luis_felipe">
        <!-- Removendo colunas antigas para novas regras de negocio -->
        <dropColumn tableName="scheduling" columnName="scheduled_time_start"/>
        <dropColumn tableName="scheduling" columnName="scheduled_time_end"/>

        <!-- Adicionar a nova coluna scheduledDate -->
        <addColumn tableName="scheduling">
            <column name="scheduledDate" type="date"/>
        </addColumn>

        <!-- Adicionar a nova coluna turno -->
        <addColumn tableName="scheduling">
            <column name="turno" type="varchar(255)"/>
        </addColumn>
    </changeSet>

    <changeSet id="3" author="luis_felipe">
        <!-- Renomear a coluna de scheduledDate para scheduled_Date para manter o padrao -->
        <renameColumn tableName="scheduling" oldColumnName="scheduledDate" newColumnName="scheduled_Date" columnDataType="date"/>
    </changeSet>

    <changeSet id="4" author="luis_felipe">
        <!-- Padronizando com todas letras minusculas -->
        <renameColumn tableName="scheduling" oldColumnName="scheduled_Date" newColumnName="scheduled_date" columnDataType="date"/>
    </changeSet>

        <!-- Migration para remover as colunas antigas e adicionar as novas -->
    <changeSet id="5" author="luis_felipe">
        <!-- Removendo colunas antigas para novas regras de negocio referente ao paymentValue que nao existe mais -->
        <dropColumn tableName="scheduling" columnName="payment_value"/>

    </changeSet>

    <changeSet id="6" author="luis_felipe">
        <addColumn tableName="scheduling">
            <column name="checkin_status" type="varchar(50)" defaultValue="PENDENTE">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
